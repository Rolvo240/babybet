<!DOCTYPE html>
<html>
<head>
  <title>Leaderboard</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gradient-to-b from-yellow-50 to-yellow-100 p-6">
  <div class="max-w-3xl mx-auto bg-white rounded shadow p-6">
    <h1 class="text-3xl font-bold mb-6 text-center text-yellow-700">🏆 BabyBet Leaderboard</h1>
    <table class="w-full table-auto border">
      <thead class="bg-yellow-200">
        <tr>
          <th class="p-2 text-left">Navn</th>
          <th class="p-2 text-center">Reaction</th>
          <th class="p-2 text-center">Flappy</th>
          <th class="p-2 text-center">Total</th>
        </tr>
      </thead>
      <tbody>
        <% scores.forEach(user => { %>
          <tr class="border-t">
            <td class="p-2"><%= user.name %></td>
            <td class="p-2 text-center"><%= user.reaction %></td>
            <td class="p-2 text-center"><%= user.flappy %></td>
            <td class="p-2 text-center font-bold"><%= user.total %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>
