<!DOCTYPE html>
<html>
<head>
  <title>Adminpanel</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 p-6">
  <div class="max-w-5xl mx-auto bg-white p-6 rounded shadow">
    <h1 class="text-3xl font-bold mb-6 text-indigo-700">üõ†Ô∏è BabyBet Adminpanel</h1>
    <table class="table-auto w-full border">
      <thead>
        <tr class="bg-gray-200 text-left">
          <th class="p-2">Navn</th>
          <th class="p-2">Kategori</th>
          <th class="p-2">Bet</th>
          <th class="p-2">Reaction</th>
          <th class="p-2">Flappy</th>
          <th class="p-2">Total</th>
        </tr>
      </thead>
      <tbody>
        <% data.forEach(user => { %>
          <% user.bets.forEach((bet, i) => { %>
            <tr class="border-t">
              <% if (i === 0) { %>
                <td class="p-2" rowspan="<%= user.bets.length %>"><%= user.name %></td>
              <% } %>
              <td class="p-2"><%= bet.category %></td>
              <td class="p-2"><%= bet.bet %></td>
              <% if (i === 0) { %>
                <td class="p-2" rowspan="<%= user.bets.length %>"><%= user.reaction ?? '-' %></td>
                <td class="p-2" rowspan="<%= user.bets.length %>"><%= user.flappy ?? '-' %></td>
                <td class="p-2" rowspan="<%= user.bets.length %>"><%= user.total ?? '-' %></td>
              <% } %>
            </tr>
          <% }) %>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>
