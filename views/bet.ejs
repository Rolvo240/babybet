    .odds-high { color: green; animation: pulse 2s infinite; }
    .odds-low { color: red; animation: blink 1s infinite; }

    @keyframes pulse {
      0% { opacity: 1; }
      50% { opacity: 0.5; }
      100% { opacity: 1; }
    }
    @keyframes blink {
      0%, 100% { opacity: 1; }
      50% { opacity: 0; }
    }
  </style>
  <script>
    function playSubmitSound() {
      const audio = new Audio('/submit.mp3');
      audio.play();
    }
  </script>
</head>
