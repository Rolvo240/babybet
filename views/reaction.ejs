<!DOCTYPE html>
<html lang="no">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Reaction Game</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    .baby {
      font-size: 5rem;
      transition: transform 0.3s ease;
    }
    .baby.active {
      transform: scale(1.4) translateX(100px);
    }
  </style>
</head>
<body class="bg-gradient-to-br from-green-100 to-blue-200 flex flex-col items-center justify-center min-h-screen text-center">
  <h1 class="text-2xl font-bold mb-4">ðŸ‘¶ Reaction Game</h1>
  <p class="text-gray-700 mb-4">Trykk NÃ…R babyen beveger seg!</p>
  <div id="baby" class="baby">ðŸ‘¶</div>

  <form id="reactionForm" method="POST" action="/reaction-score">
    <input type="hidden" name="userId" value="<%= userId %>">
    <input type="hidden" name="reactionScore" id="reactionScore">
  </form>

  <button id="startBtn" class="mt-6 bg-blue-600 text-white px-4 py-2 rounded">Start</button>

  <script>
    const baby = document.getElementById('baby');
    const startBtn = document.getElementById('startBtn');
    const reactionInput = document.getElementById('reactionScore');
    const form = document.getElementById('reactionForm');

    let triggered = false;
    let startTime;
    let userId = "<%= userId %>";

    startBtn.onclick = () => {
      startBtn.disabled = true;
      baby.classList.remove("active");
      const delay = Math.random() * 3000 + 1000;

      setTimeout(() => {
        baby.classList.add("active");
        startTime = Date.now();
        triggered = true;
      }, delay);
    };

    document.body.addEventListener("click", () => {
      if (triggered) {
        const reactionTime = Date.now() - startTime;
        triggered = false;

        let reactionScore;
        if (reactionTime < 150) {
          reactionScore = 100;
        } else if (reactionTime < 250) {
          reactionScore = 80;
        } else if (reactionTime < 400) {
          reactionScore = 50;
        } else {
          reactionScore = 20;
        }

        console.log("Reaction Time:", reactionTime, "ms, Score:", reactionScore);

        window.location.href = `/casino/flappy/${userId}?reactionScore=${reactionScore}`;
      }
    });
  </script>
</body>
</html>
