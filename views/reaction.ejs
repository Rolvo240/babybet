<!DOCTYPE html>
<html lang="no">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>GolfBaby Reaction Game</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    .baby {
      font-size: 5rem;
      transition: transform 0.3s ease;
    }
    .baby.active-left {
      transform: translateX(-120px) scale(1.5);
    }
    .baby.active-right {
      transform: translateX(120px) scale(1.5);
    }
  </style>
</head>
<body class="bg-gradient-to-br from-green-100 to-blue-200 min-h-screen flex flex-col items-center justify-center p-4 text-center">

  <h1 class="text-2xl font-bold text-green-800 mb-2">🎯 GolfBaby Reaction Game</h1>
  <p class="text-gray-700 mb-6">Trykk når babyen svinger (bytter plass)!</p>

  <div class="h-32 flex items-center justify-center mb-4">
    <div id="baby" class="baby">👶</div>
  </div>

  <button id="startBtn" class="bg-blue-600 text-white font-bold px-6 py-3 rounded shadow hover:scale-105 transition">
    Start Reaction Game
  </button>

  <div id="reactionResult" class="mt-6 text-xl font-semibold text-purple-800"></div>

  <script>
    const baby = document.getElementById('baby');
    const startBtn = document.getElementById('startBtn');
    const resultDiv = document.getElementById('reactionResult');

    let startTime;
    let waitingForClick = false;

    function resetBaby() {
      baby.classList.remove("active-left", "active-right");
    }

    startBtn.onclick = () => {
      resetBaby();
      resultDiv.innerText = "";
      startBtn.disabled = true;
      startBtn.innerText = "Vent...";

      const delay = Math.random() * 3000 + 1000;
      setTimeout(() => {
        const direction = Math.random() > 0.5 ? "active-left" : "active-right";
        baby.classList.add(direction);
        startTime = Date.now();
        waitingForClick = true;
        startBtn.innerText = "TRYKK!";
      }, delay);
    };

    document.body.onclick = () => {
      if (!waitingForClick) return;
      const reactionTime = Date.now() - startTime;
      waitingForClick = false;
      showResult(reactionTime);
    };

    function showResult(ms) {
      let msg = "";
      if (ms < 150) msg = "🏆 Legendary! " + ms + "ms";
      else if (ms < 300) msg = "🔥 Rask i rekylen! " + ms + "ms";
      else if (ms < 500) msg = "😅 Litt treg... " + ms + "ms";
      else msg = "🍺 Brisen? " + ms + "ms";

      resultDiv.innerText = msg;
      startBtn.innerText = "Spill igjen";
      startBtn.disabled = false;
    }
  </script>
</body>
</html>
