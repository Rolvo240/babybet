<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Din Profil</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">
  <style>
    body { font-family: 'Poppins', sans-serif; }
    .achievement-card {
      transform: translateY(0);
      transition: all 0.3s ease;
    }
    .achievement-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 10px 20px rgba(0,0,0,0.2);
    }
    .achievement-locked {
      filter: grayscale(100%);
      opacity: 0.7;
    }
    .stat-card {
      background: linear-gradient(135deg, rgba(255,255,255,0.1), rgba(255,255,255,0.05));
      backdrop-filter: blur(10px);
    }
  </style>
</head>
<body class="bg-gradient-to-tr from-purple-900 via-pink-700 to-purple-900 text-white min-h-screen p-6">
  <div class="max-w-4xl mx-auto">
    <div class="flex justify-between items-center mb-8">
      <a href="/casino/<%= userId %>" class="bg-white/10 hover:bg-white/20 p-3 rounded-full transition">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
      </a>
      <h1 class="text-4xl font-extrabold text-center">ğŸ‘¤ Din Profil</h1>
      <div class="w-10"></div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
      <!-- Statistikk -->
      <div class="stat-card rounded-2xl p-6">
        <h2 class="text-2xl font-bold mb-4">ğŸ“Š Statistikk</h2>
        <div class="space-y-4">
          <div class="flex justify-between items-center">
            <span>Spill spilt</span>
            <span class="font-bold"><%= stats.games_played %></span>
          </div>
          <div class="flex justify-between items-center">
            <span>Seiere</span>
            <span class="font-bold"><%= stats.games_won %></span>
          </div>
          <div class="flex justify-between items-center">
            <span>Vinnrate</span>
            <span class="font-bold"><%= ((stats.games_won / stats.games_played) * 100).toFixed(1) %>%</span>
          </div>
          <div class="flex justify-between items-center">
            <span>Total vunnet</span>
            <span class="font-bold"><%= stats.total_winnings %> ğŸ’°</span>
          </div>
          <div class="flex justify-between items-center">
            <span>StÃ¸rste seier</span>
            <span class="font-bold"><%= stats.biggest_win %> ğŸ’°</span>
          </div>
        </div>
      </div>

      <!-- Saldo -->
      <div class="stat-card rounded-2xl p-6">
        <h2 class="text-2xl font-bold mb-4">ğŸ’° Saldo</h2>
        <p class="text-4xl font-bold text-center"><%= saldo %></p>
      </div>
    </div>

    <!-- Achievements -->
    <div class="stat-card rounded-2xl p-6">
      <h2 class="text-2xl font-bold mb-4">ğŸ† Achievements</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        <% achievements.forEach(achievement => { %>
          <div class="achievement-card <%= !achievement.earned ? 'achievement-locked' : '' %> bg-white/10 rounded-xl p-4">
            <div class="flex items-center gap-3">
              <span class="text-3xl"><%= achievement.icon %></span>
              <div>
                <h3 class="font-bold"><%= achievement.name %></h3>
                <p class="text-sm opacity-80"><%= achievement.description %></p>
                <% if (achievement.earned) { %>
                  <p class="text-xs text-green-400 mt-1">OppnÃ¥dd!</p>
                <% } %>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
    </div>
  </div>
</body>
</html> 